{
  "overlay": {
    "enabled": true,
    "position": {
      "x": 10,
      "y": 60,
      "alignment": "top_left"
    },
    "dimensions": {
      "width": 250,
      "maxHeight": 400,
      "recipeEntryHeight": 40,
      "padding": 8,
      "spacing": 4
    },
    "colors": {
      "background": {
        "r": 0,
        "g": 0,
        "b": 0,
        "a": 180
      },
      "border": {
        "r": 100,
        "g": 100,
        "b": 100,
        "a": 255
      },
      "selectedBackground": {
        "r": 50,
        "g": 150,
        "b": 50,
        "a": 200
      },
      "titleText": {
        "r": 255,
        "g": 255,
        "b": 0,
        "a": 255
      },
      "normalText": {
        "r": 255,
        "g": 255,
        "b": 255,
        "a": 255
      },
      "missingText": {
        "r": 255,
        "g": 100,
        "b": 100,
        "a": 255
      },
      "availableText": {
        "r": 100,
        "g": 255,
        "b": 100,
        "a": 255
      }
    },
    "animation": {
      "enabled": true,
      "fadeInDuration": 200,
      "fadeOutDuration": 150,
      "scrollSpeed": 3
    },
    "display": {
      "showRecipeIndex": true,
      "showInputCount": true,
      "showOutputInfo": true,
      "showCompletionPercentage": true,
      "showKeybindHints": true,
      "maxRecipesVisible": 8
    },
    "keybinds": {
      "scrollUp": "UP",
      "scrollDown": "DOWN",
      "select": "ENTER",
      "cancel": "ESCAPE",
      "toggle": "R",
      "pageUp": "PAGE_UP",
      "pageDown": "PAGE_DOWN"
    },
    "formatting": {
      "titleFormat": "§e§l{machine_name} - Recipes",
      "recipeFormat": "§f{index}. §a{output_name} §7x{output_count}",
      "inputFormat": "  §7â€¢ §f{item_name} §7x{amount}",
      "completionFormat": "§7[{percentage}%]",
      "selectedFormat": "§l> {text} §l<",
      "keybindFormat": "§8[{key}] §7{action}"
    }
  },
  "filterOptions": {
    "enabled": true,
    "showOnlyAvailable": false,
    "showOnlyMissing": false,
    "sortBy": "default",
    "sortOptions": ["default", "completion", "alphabetical", "output_count"]
  },
  "tooltips": {
    "enabled": true,
    "showIngredientDetails": true,
    "showOutputDetails": true,
    "maxTooltipWidth": 200
  }
}
